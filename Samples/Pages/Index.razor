@page "/"

<h1>Hello, world!</h1>

Welcome to your new app.

<EditForm Model="person">
    <InputSwitch Label="prueba?" @bind-Value="@person.IsAdult"></InputSwitch>
</EditForm>

<LoadingButton OnClick="ToggleButton" Text="Load data" @bind-IsLoading="isLoading"></LoadingButton>

<SkeletonTable NumberOfColumns="4" IsLoading="isLoading" ShouldAnimate="true">
    <ChildContent>
        <tr>
            <td>
                Value1
            </td>
            <td>
                Value2
            </td>
            <td>
                Value3
            </td>
            <td>
                Value4
            </td>
        </tr>
    </ChildContent>
    <Head>
        <tr>
            <th>
                Column1
            </th>
            <th>
                Column2
            </th>
            <th>
                Column3
            </th>
            <th>
                Column4
            </th>
        </tr>
    </Head>
</SkeletonTable>

<SkeletonCards IsLoading="isLoading" ShouldAnimate="true">
    <div class="row cards">
        <div class="col-sm-4">
            <div class="card">
                <div class="card-header" data-simplebar>
                    <h3 class="card-title">Title</h3>
                </div>
                <div class="card-body" data-simplebar>
                    This is the body
                </div>
                <div class="card-footer text-right">
                    This is the footer
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <div class="card-header" data-simplebar>
                    <h3 class="card-title">Title 2</h3>
                </div>
                <div class="card-body" data-simplebar>
                    This is the body 2
                </div>
                <div class="card-footer text-right">
                    This is the footer 2
                </div>
            </div>
        </div>
    </div>
</SkeletonCards>

@code{
    private bool isLoading = false;
    private string actionButonText = "Stop loading";
    private Person person = new Person();

    private async void ToggleButton()
    {
        isLoading = true;
        StateHasChanged();
        await Task.Delay(1000);

        actionButonText = isLoading ? "Stop loading" : "Start loading";

        isLoading = false;
        StateHasChanged();
        await Task.Delay(1000);
    }

    private class Person
    {
        public bool IsAdult { get; set; }
    }
}
